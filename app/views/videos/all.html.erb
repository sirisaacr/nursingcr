<!-- about section -->
<section class="videos text-center" id="about">
  <div class="container">
    <div class="row">
      <h2>Videos</h2>


        <div class="col-lg-6 col-md-offset-3">
          <div class="input-group">
            <input type="text" class="form-control" placeholder="Buscar por  palabras clave..." id="filtro">
            <span class="input-group-btn">
              <button class="btn btn-default" type="button" onclick="busqueda_filtrada()">
                <span class="glyphicon glyphicon-search"></span>
              </button>
            </span>
          </div><!-- /input-group -->
        </div><!-- /.col-lg-6 -->


        <% @videos.each do |video| %>
        <div class="top-buffer col-md-6 col-sm-6">
          <div class="single-article-detail clearfix">
            <div class="video-title">
              <h3> <%=video.Titulo %> </h3>
            </div>
            <div class="embed-responsive embed-responsive-16by9">

              <iframe class="embed-responsive-item" src="<%=video.URL%>"></iframe>
            </div>
            <div class="video-details">
              <div class="pentagon-text">
                  <%if logged_in? %>
                    <%= link_to video_delete_path(:titulo => encriptar(video.id)), :class => "delete btn btn-danger btn-xs btn-round" do %>
                      <span class="glyphicon glyphicon-trash"></span>
                    <% end %>
                  <%else%>
                    <img class="img-responsive" src="<%=image_url('cofia.png')%>" alt="">
                  <%end%>
              </div>
              <h3> <%=video.Resumen%> </h3>
            </div>
          </div>
        </div>
        <%end%>

      </div>
    </div>
  </section><!-- end of article section -->
